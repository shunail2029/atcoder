{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-std=c++17",
                // "-fsanitize=undefined,address",
                "-fsanitize=undefined",
                "${file}",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "cp",
            "args": [
                "${workspaceFolder}/template.cpp",
                "${file}"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
